<!doctype html>
<html>
<head>
  <title>Calculadora</title>
  <style type="text/css">
    *{
      margin: 0;
      padding: 0;
      outline: 0;
    }
    html{
      background-color: #eee;
      font-family: Helvetica;
      font-size: 20px;
    }
    form{
      text-align: center;
      margin: auto;
      max-width: 60%;
      width: 100%;
    }
    form input[type=text]{
      font-size: 20px;
      font-family: Helvetica;
      width: calc(100% - 10px);
      display: inline-block;
      padding: 5px;
    }
    form input[type="button"]{
      font-size: 20px;
      font-family: Helvetica;
      width: calc(25% - 5px);
      display: inline-block;
      position: relative;
    }
  </style>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
</head>
<body>
<form method="post" name="form1">
  <label>Coloque aqui la operacion que desea realizar:</label><br>
  <input type="text" name="operation" placeholder="Ejemplo: 5+1-3*4/8"><br>
  <label class="n">Coloque aqui el numero con el que va a elevar</label>
  <input class="n" type="text" name="n" placeholder="Ejemplo: 2"><br>
  <input type="button" value="Operar" onclick="document.form1.action = '/calculator/operar';document.form1.submit()">
  <input type="button" value="âˆšx" onclick="document.form1.action = '/calculator/raiz';document.form1.submit()">
  <input type="button" value="x!" onclick="document.form1.action = '/calculator/factorial';document.form1.submit()">
  <input type="button" value="x^n" onclick="var n = prompt('Please enter your name', 'Harry Potter');document.form1.action = '/calculator/base';document.form1.n.value = n;document.form1.submit()">
</form>
</body>
<script>
  $(document).ready(function(){
    $('.n').hide();
  });
</script>
</html>