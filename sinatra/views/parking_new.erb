<!doctype html>
<html>
<head>
  <title>Parking lot</title>
  <style type="text/css">
    *{
      margin: 0;
      padding: 0;
      outline: 0;
    }
    html{
      background-color: #eee;
      font-family: Helvetica;
      font-size: 20px;
    }
    form{
      text-align: center;
      margin: auto;
      max-width: 60%;
      width: 100%;
    }
    form input[type=text]{
      font-size: 20px;
      font-family: Helvetica;
      width: calc(100% - 10px);
      display: inline-block;
      padding: 5px;
    }
    form input[type="submit"]{
      font-size: 20px;
      font-family: Helvetica;
      width: calc(25% - 5px);
      display: inline-block;
      position: relative;
    }
  </style>
</head>
<body>
  <form action="/parking/new/save" method="post">
    <label>Ingrese aqui la placa del carro</label>
    <input type="text" name="plate" placeholder="ABC123" required>
    <input type="submit" value="Agergar">
  </form>
</body>
</html>